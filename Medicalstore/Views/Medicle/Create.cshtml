@model Medicalstore.Models.DrugDetails

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="color:darkblue;">Add new Drug </h3>
        <hr />
        <div class="form-group">
            <div class="col-md-10" style="width: 15% !important;">
                <label style="float: right;">Drug Name : </label>
            </div>
            <div class="col-md-10" style="width: 30% !important;">
                @Html.EditorFor(model => model.Drug_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Drug_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="width: 15% !important;">
                <label style="float: right;">Manufacturer Name : </label>
            </div>
            <div class="col-md-10" style="width: 30% !important;">
                @Html.EditorFor(model => model.Manufacturer_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manufacturer_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="width: 15% !important;">
                <label style="float: right;">Manufactured Date : </label>
            </div>
            <div class="col-md-2" style="width: 10% !important;">
                @Html.EditorFor(model => model.Manufactured_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manufactured_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" style="width: 15% !important;">
                <label style="float: right;">Expiray Date : </label>
            </div>
            <div class="col-md-2" style="width: 10% !important;">
                @Html.EditorFor(model => model.Expiration_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Expiration_date, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-left: 14.68% !important;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <input onclick="location.href='@Url.Action("DrugDetails", "Medicle")'" type="button" value="Cancel" class="btn btn-primary" />
                </div>
            </div>
    </div>
}

