@using (@Html.BeginForm("Medicle", "Sell", FormMethod.Post))
{
    <script type="text/javascript">
                function isNumberKey(evt) {
                debugger;
                var charCode = (evt.which) ? evt.which : event.keyCode
                if (charCode > 31 && (charCode < 48 || charCode > 57))
                    return false;
                return true;
        }
        //Javascript form validation
        function validateform()
        {
            debugger;
            var result = true;
            var name = txtCustomerName.value;
            var phone = txtCustomerPhone.value;
            var madicinename = txtMedicineName.value;
            var manufacturer = txtManufacturerName.value;
            var quantity = txtquantity.value;
            if (name == "")
            {
                span_name.style.display = "block";
                tr_name.style.backgroundColor = "#f1dede";
                tr_name.style.border = "1px solid red";
                result = false;
            }
            else
            {
                span_name.style.display = "none";
                tr_name.style.backgroundColor = "";
                tr_name.style.border = "";
                
            }
            if (phone == "" )
            {
                span_phone.style.display = "block";
                span_phone_ten.style.display = "none";
                tr_phone.style.backgroundColor = "#f1dede";
                tr_phone.style.border = "1px solid red";
                result = false;
            }
            else if (phone.length<10)
            {
                span_phone_ten.style.display = "block";
                span_phone.style.display = "none";
                tr_phone.style.backgroundColor = "#f1dede";
                tr_phone.style.border = "1px solid red";
                result = false;
            }
            else
            {
                span_phone_ten.style.display = "none";
                span_phone.style.display = "none";
                tr_phone.style.backgroundColor = "";
                tr_phone.style.border = "";
            }
            if (madicinename == "")
            {
                span_medname.style.display = "block";
                tr_medname.style.backgroundColor = "#f1dede";
                tr_medname.style.border = "1px solid red";
                result = false;
            }
            else {
                span_medname.style.display = "none";
                tr_medname.style.backgroundColor = "";
                tr_medname.style.border = "";
            }
            if (manufacturer == "")
            {
                span_manu_name.style.display = "block";
                tr_manu_name.style.backgroundColor = "#f1dede";
                tr_manu_name.style.border = "1px solid red";
                result = false;
            }
            else
            {
                span_manu_name.style.display = "none";
                tr_manu_name.style.backgroundColor = "";
                tr_manu_name.style.border = "";
            }
            if (quantity == "")
            {
                span_quantity.style.display = "block";
                tr_quantity.style.backgroundColor = "#f1dede";
                tr_quantity.style.border = "1px solid red";
                result = false;
            }
            else
            {
                span_quantity.style.display = "none";
                tr_quantity.style.backgroundColor = "";
                tr_quantity.style.border = "";
            }
            return result;
        }
     </script>
    <div>
        <h4 style="color: #07C;width:40%">Add Customer and drugs details</h4>
    </div>
    <hr style="border-top: 3px solid skyblue;" />
        <div style="width: 100%;height: 385px;">
            <div style="width: 53%;float: left;">
                <span style="color:lightblue;font-weight:bold">Customer Details</span>
                <table style="width:80%;margin-top: 25px;">
                    <tr id="tr_name">
                        <td style="width:16%;height: 40px;">Name </td>
                        <td>
                            @Html.TextBox("txtCustomerName", null, new { @class = "form-control" })
                            <span id="span_name" style="color:red;display:none;">Please enter Name</span>
                        </td>
                    </tr>
                    <tr id="tr_phone">
                        <td style="width:16%;height: 40px;">Phone </td>
                        <td>
                            @Html.TextBox("txtCustomerPhone",null, new { @class="form-control",maxlength = 10 , onkeypress = "return isNumberKey(event)" })
                            <span id="span_phone_ten" style="color:red;display:none;">Please enter 10 digit Phone Number</span>
                            <span id="span_phone" style="color:red;display:none;">Please enter Phone Number</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:16%;height: 40px;">Address </td>
                        <td>
                            @Html.TextArea("txtCustomerAddress", null, new { @class = "form-control" })
                        </td>
                    </tr>
                </table>
            </div>
            <div style="width: 47%;float: right;">
                <span style="color:lightblue;font-weight:bold">Medicine Details</span>
                <table style="margin-top: 25px;width:100%">
                    <tr id="tr_medname">
                        <td style="width:28%;height: 40px;">Medicine Name </td>
                        <td>
                            @Html.TextBox("txtMedicineName", null, new { @class = "form-control" })
                            <span id="span_medname" style="color:red;display:none;">Please enter Medicine Name</span>
                        </td>
                    </tr>
                    <tr id="tr_manu_name">
                        <td style="width:28%;height: 40px;">Manufacturer Name </td>
                        <td>
                            @Html.TextBox("txtManufacturerName", null, new { @class = "form-control" })
                            <span id="span_manu_name" style="color:red;display:none;">Please enter Manufacturer Name</span>
                        </td>
                    </tr>
                    <tr id="tr_quantity">
                        <td style="width:28%;height: 40px;">Quantity </td>
                        <td>
                            @Html.TextBox("txtquantity", null, new { @class = "form-control", maxlength = 3, onkeypress = "return isNumberKey(event)" })
                            <span id="span_quantity" style="color:red;display:none;">Please enter Quantity</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:28%;height: 40px;">Mg </td>
                        <td>
                    @Html.DropDownList("Status", new List<SelectListItem>
                   {
                    new SelectListItem{ Text="100", Value = "1" },
                    new SelectListItem{ Text="200", Value = "0" },
                    new SelectListItem{ Text="300", Value = "0" },
                    new SelectListItem{ Text="400", Value = "0" },
                    new SelectListItem{ Text="500", Value = "0" },
                    new SelectListItem{ Text="600", Value = "0" },
                    new SelectListItem{ Text="700", Value = "0" },
                    new SelectListItem{ Text="800", Value = "0" },
                    new SelectListItem{ Text="900", Value = "0" },
                    new SelectListItem{ Text="1000", Value = "0" }
                   },new {@class="form-control"})
                        </td>
                    </tr>
                    <tr>
                        <td style="width:28%;height: 40px;">Manufactured Date</td>
                        <td>
                            @Html.TextBox("txtmanufacturedDate", null, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td style="height: 40px;">Expiry Date</td>
                        <td>
                            @Html.TextBox("txtExpiryDate", null, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:28%;height: 40px;">Price in Rupees</td>
                        <td>
                            <div>
                                <input type="text" id="txtPrice1" onkeypress="return isNumberKey(event)" class="form-control" style="width:25%;float:left;">
                                <span style="font-weight:bold;float: left;padding-top: 15px;padding-left: 3px;padding-right: 3px;">.</span>
                                <input type="text" id="txtPrice2" onkeypress="return isNumberKey(event)" class="form-control" style="width:15%">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="button" id="btncancel" style="margin-top:30px;float:right;" value="CANCEL" class="btn btn-primary" />
                            <input type="submit" id="btnSubmit" onclick="return validateform();" style="margin-top:30px;float:right;margin-right: 10px;" value="SUBMIT" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
}