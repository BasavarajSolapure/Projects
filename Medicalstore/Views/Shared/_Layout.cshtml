<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Content/Styles/LayoutCSS/jquery-1.12.4.js"></script>
    <script src="~/Content/Styles/LayoutCSS/jquery-ui.js"></script>
    <link href="~/Content/Styles/LayoutCSS/themesCSS.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        .btn_home {
            width: 102px;
            border-radius: 20px;
        }
        .main_tab {
            height: 63px;
            background-color: #007fff !important;
            /*#880e4f*/
        }

        .li_tabs {
            border: none !important;
            width: 100px;
            font-size:22px !important;
            border-bottom-width: 1px !important;
            height: 28px;
            margin-top: 10px !important;
            background-color: #007fff !important;
        }
            .white_color{
            color:white !important;
        }

        .div_css {
            width: 100%;
            height: 90.67vh;
            background: url('../../Content/Images/BackgroundImages/backgrd_2.jpg');
            background-size: cover;
            overflow: hidden;
            margin-top: -10px;
        }

        .round_img {
            border-radius: 50%;
            height: 60px;
            width: 60px;
        }
        input[type="button"]:hover {
            background: #0099ff !important;
            color:white !important;
        }
    </style>
    <script>
        $(function () {
            $("#tabs").tabs();
        });
    </script>
</head>
<body>
    <div>
        <div id="tabs">
            <ul class="main_tab">
                <li id="li_home" class="li_tabs"><input onclick="location.href='@Url.Action("HomeAction", "Medicle")'"  id="btn_home" type="button" value="Home" class="btn_home" /></li>
                <li id="li_sell" class="li_tabs"><input onclick="location.href='@Url.Action("Sell", "Medicle")'" class="btn_home"id="btn_sell" type="button" value="Sell" /></li>
                <li id="li_stock" class="li_tabs"><input onclick="location.href='@Url.Action("DrugDetails", "Medicle")'" class="btn_home" id="btn_stock" type="button" value="Stock" /></li>
                <li id="li_contact" class="li_tabs"><input onclick="location.href='@Url.Action("Contact", "Medicle")'" class="btn_home" id="btn_contact" type="button" value="Contact" /></li>
                <li style="float:right !important">
                    <table>
                        <tr>
                            <td><a><img class="round_img" src="~/Content/Images/userlogo.png" /></a></td>
                        </tr>
                        <tr>
                            <td><a id="lbluser">Username</a></td>
                        </tr>
                    </table>
                </li>
            </ul>
            <div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Medical Store App</p>
        </footer>
    </div>
</body>
</html>
